/*
 Задача 2.
 На улице расположены дома {1,3,5,7,8,9,10,11,13,15,16,17,19,20}. 
 Напишите программу, которая будет запрашивать у пользователя номер дома, 
 если дом с таким номером есть на улице — вывести “+”, -
 иначе вывести ”-”.  
 Организовать поиск элемента оптимальным способом.
*/ 

#include <iostream>
#include <iterator>
using namespace std;
bool SarchKey(int, int*, int, int);

int main()
{
	setlocale(LC_ALL, "ru");
	int key;
	std::cout << "Введите номер дома: \n";
	std::cin >> key;
	int k[] = { 1,3,5,7,8,9,10,11,13,15,16,17,19,20 };

	int left = 0;
	int right = 14;
	if (SarchKey(key, k, left, right))
	{
		std::cout << " + " << std::endl;
	}
	else
	{
		std::cout << " - " << std::endl;
	}
}

bool SarchKey(int key, int* k, int left, int right)
{
	int index;
	int search = -1;


	while (left <= right)
	{
		int mid = (left + right) / 2;
		if (key == k[mid])
		{
			search = k[mid];
			index = mid;
			break;
		}
		if (key < k[mid])
			right = mid - 1;
		else
			left = mid + 1;
	}
	if (search == -1)
	{
		return false;
	}
	else
	{
		return true;
	}
}
